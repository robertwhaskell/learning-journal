{% extends "base.jinja2" %}
{% block body %}
<script src="../static/editjs.js"></script>
  <h2>Editor</h2>
    <div name="testid">{{entry.id}}</div>
    <p class="dateline">{{ entry.created.strftime('%b. %d, %Y') }}</p>
        <div class="field">
            <label for="title">Title</label>
                <input type="text" size="30" name="title" id="title" value={{entry.title}}>
        </div>
        <div class="field">
            <label for="text">Text</label>
                <textarea name="text" id="text" rows="5" cols="80">{{ entry.text|safe}}</textarea>
        </div>
        <button id="editbutton">Edit</button>
        <button id="tweetbutton">Tweet</button>
    <a href="{{ request.route_url('delete', id = entry.id)}}"><button>Delete</button></a>
{% endblock %}